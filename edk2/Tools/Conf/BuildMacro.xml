  <!--
    Macro for intialize some properties. This Macro build will be called before source file build.  
    -->
  <macrodef name="Build_Init">
    <sequential>
      <var name="OBJECTS" value="" />
      <var name="SDB_FILES" value="" />
    </sequential>
