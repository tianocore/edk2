  INF_VERSION                    = 0x00010005
  BASE_NAME                      = SecPeiDxeTimerLibUefiCpu
  FILE_GUID                      = 4FFF2014-2086-4ee6-9B58-886D1967861C
  MODULE_TYPE                    = BASE
  VERSION_STRING                 = 1.0
  LIBRARY_CLASS                  = TimerLib


#
#  VALID_ARCHITECTURES           = IA32 X64 IPF
#

[Sources.Ia32, Sources.X64]
