[Defines]
  INF_VERSION                    = 0x00010005
  BASE_NAME                      = FirmwareUpdate
  FILE_GUID                      = AEFAF26C-FB6D-4fef-AF7A-9D78FF201FCA
  MODULE_TYPE                    = UEFI_APPLICATION
  VERSION_STRING                 = 1.0
